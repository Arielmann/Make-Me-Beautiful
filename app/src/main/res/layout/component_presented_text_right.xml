<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textSenderName"
            android:layout_alignParentLeft="true"
            android:paddingBottom="6dp"
            android:paddingLeft="2dp"
            android:text=""
            android:textColor="@color/md_purple_50"
            android:textSize="12sp" />


        <RelativeLayout
            android:id="@+id/chatItemLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_below="@+id/textSenderName"
            android:background="@drawable/purple_bubble"
            android:padding="12dp">


            <TextView
                android:id="@+id/textSenderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/chatFrameLayout"
                android:layout_alignLeft="@id/chatFrameLayout"
                android:paddingEnd="12dp"
                android:paddingRight="12dp"
                android:layout_alignParentTop="true"
                android:maxLines="1"
                android:paddingBottom="6dp"
                android:text="Ariel"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_alignRight="@id/chatFrameLayout"
               />

            <TextView
                android:id="@+id/presentedTextRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="12dp"
                android:paddingRight="12dp"
                android:text="Hello, how are you?"
                android:layout_below="@id/textSenderName"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>