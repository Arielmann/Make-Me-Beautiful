<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <ImageView
        android:id="@+id/quickStylistImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/quickStylistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Stylist name"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/quickStylistImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/quickStylistLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Stylist location"
        android:layout_gravity="center_horizontal"
        android:layout_alignWithParentIfMissing="false"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/quickStylistName"
        android:layout_centerHorizontal="true" />
</RelativeLayout>