<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.home.makemebeautiful">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/pink_thumb_up"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".welcome_screen.WelcomeScreen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter><action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>
        <activity
            android:name=".choose_stylist.choosing_screen.ChooseStylistScreen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".choose_stylist.stylist_details_screen.StylistDetailsScreen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".chat.ChatScreen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user_profile.user_info.description.SetDescriptionScreen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user_profile.user_info.user_profile_image.SetProfileImageScreen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client_user.GetAppInfo"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user_profile.user_info.basic_info.RegisterBasicProfileScreen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".contacted_users.ContactedUsersScreen"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />

        <!-- Define receiver for push notifications from GCM -->
        <receiver
            android:name=".chat.broadcastReceivers.GcmReceiver"
            android:enabled="true"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.example.gcm" />
            </intent-filter>
        </receiver>

        <service
            android:name=".chat.services.MultiMessagesGcmService"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>